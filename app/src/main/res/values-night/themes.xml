<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.GithubUser_" parent="Theme.Material3.DayNight">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/dark_background</item>
        <item name="colorOnPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_background</item>
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
    </style>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="TextContent.title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextContent.HeadlineSmall">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent.Info">
        <item name="android:textSize">14sp</item>
    </style>
</resources>